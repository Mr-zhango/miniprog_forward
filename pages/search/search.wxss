/* pages/search/search.wxss */
.search{
  width: 100%;
  height: 100rpx;
  padding-top: 50rpx;
  background: whitesmoke;
  display: flex;
  flex-flow: row;
  border-bottom: 3rpx solid #999;
}
.search input{
  height: 50rpx;
  padding: 5prx;
  background: #999;
  width: 70%;
  border-radius: 10rpx;
  margin-left: 5%;
}
.search button{
  margin: 0 0 0 10rpx;
  height: 60rpx;
}
.search_result{
  background:#999;
}
.picker{
  background: #999;
  color: white;
  height: 70rpx;
  line-height: 50rpx;
  padding-top: 10rpx;
  text-align: center;
  font-size: 35rpx;
}
.categoryButton{
  flex-direction: column;
  justify-content: center;
}